<resources>

<!--// super splash
    //https://android.jlelse.eu/launch-screen-in-android-the-right-way-aca7e8c31f52 -->

        <style name="SplashTheme" parent="AppTheme">
            <item name="android:windowBackground">@drawable/splash</item>
        </style>



    <style name="AppTheme" parent="BaseTheme" />
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- para Main activity -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="Toolbar.Light" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/grey_very_hard</item>
        <item name="android:textColorPrimary">@color/grey_very_hard</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>


    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>



    <!--TextInputLayout Mais bonito style-->
    <style name="TextAppearance.App.TextInputLayout"
        parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>


    <!--Melhorar o style da busca localização v. 0.6-->
    <style name="ProgressBar.Primary" parent="@style/AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.FullScreenDialog">
        <item name="android:windowAnimationStyle">@style/Animation.WindowSlideUpDown</item>
    </style>

    <!--Animação fragmento COLOCAR stackover link REVER onde vi código !! v. 0.6-->
    <style name="Animation.WindowSlideUpDown" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_fragment_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fragment_out</item>
    </style>

</resources>
